<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:tag="layout/card_catalog_item_0"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/card_margin_end"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <FrameLayout
            android:id="@id/meta_poster_frame"
            android:tag="binding_1"
            android:layout_width="0.0dip"
            android:layout_height="0.0dip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_min="@dimen/meta_poster_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_min="@dimen/meta_poster_size">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:tag="binding_2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:alpha="0.5">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:id="@id/meta_poster_placeholder"
                    android:tag="binding_3"
                    android:layout_width="50.0dip"
                    android:layout_height="50.0dip"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null" />
                <TextView
                    android:textSize="@dimen/meta_poster_text_size"
                    android:layout_gravity="center_horizontal"
                    android:id="@id/meta_title"
                    android:tag="binding_4"
                    android:paddingLeft="@dimen/meta_poster_text_padding"
                    android:paddingTop="@dimen/meta_poster_text_padding"
                    android:paddingRight="@dimen/meta_poster_text_padding"
                    android:paddingBottom="@dimen/meta_poster_text_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:textAlignment="center"
                    android:paddingHorizontal="@dimen/meta_poster_text_padding"
                    android:paddingVertical="@dimen/meta_poster_text_padding" />
            </LinearLayout>
            <ImageView
                android:layout_gravity="center"
                android:id="@id/meta_poster"
                android:tag="binding_5"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:contentDescription="@null" />
            <FrameLayout
                android:layout_gravity="end|center|top"
                android:tag="binding_6"
                android:background="@drawable/card_in_cinema_background"
                android:paddingLeft="@dimen/meta_in_cinema_horizontal_padding"
                android:paddingRight="@dimen/meta_in_cinema_horizontal_padding"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/meta_in_cinema_height"
                android:layout_marginLeft="@dimen/meta_in_cinema_horizontal_margin"
                android:layout_marginTop="@dimen/meta_in_cinema_vertical_margin"
                android:layout_marginRight="@dimen/meta_in_cinema_horizontal_margin"
                android:layout_marginBottom="@dimen/meta_in_cinema_vertical_margin"
                android:layout_marginHorizontal="@dimen/meta_in_cinema_horizontal_margin"
                android:layout_marginVertical="@dimen/meta_in_cinema_vertical_margin"
                android:paddingHorizontal="@dimen/meta_in_cinema_horizontal_padding">
                <TextView
                    android:textSize="@dimen/meta_in_cinema_text_size"
                    android:textStyle="bold"
                    android:textColor="?cardInCinemaTextColor"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_in_theater"
                    android:textAllCaps="true" />
            </FrameLayout>
            <FrameLayout
                android:layout_gravity="end|center|top"
                android:tag="binding_7"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/meta_new_videos_height"
                android:layout_marginLeft="@dimen/dialog_small_padding"
                android:layout_marginTop="@dimen/dialog_small_padding"
                android:layout_marginRight="@dimen/dialog_small_padding"
                android:layout_marginBottom="@dimen/dialog_small_padding"
                android:layout_marginHorizontal="@dimen/dialog_small_padding"
                android:layout_marginVertical="@dimen/dialog_small_padding">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/new_videos"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null" />
                <TextView
                    android:textSize="@dimen/meta_new_videos_text_size"
                    android:textStyle="bold"
                    android:textColor="?android:textColorPrimaryInverse"
                    android:layout_gravity="center"
                    android:tag="binding_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>
            <FrameLayout
                android:layout_gravity="start|center|top"
                android:tag="binding_9"
                android:background="@drawable/card_watched_background"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/meta_watched_size"
                android:layout_marginLeft="@dimen/dialog_small_padding"
                android:layout_marginTop="@dimen/dialog_small_padding"
                android:layout_marginRight="@dimen/dialog_small_padding"
                android:layout_marginBottom="@dimen/dialog_small_padding"
                android:layout_marginHorizontal="@dimen/dialog_small_padding"
                android:layout_marginVertical="@dimen/dialog_small_padding">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/dialog_xsmall_padding"
                    android:layout_marginTop="@dimen/dialog_xsmall_padding"
                    android:layout_marginRight="@dimen/dialog_xsmall_padding"
                    android:layout_marginBottom="@dimen/dialog_xsmall_padding"
                    android:src="@drawable/checkmark"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null"
                    android:layout_marginHorizontal="@dimen/dialog_xsmall_padding"
                    android:layout_marginVertical="@dimen/dialog_xsmall_padding" />
            </FrameLayout>
            <ProgressBar
                android:layout_gravity="bottom"
                android:tag="binding_10"
                android:paddingLeft="@dimen/progress_bar_bottom_padding"
                android:paddingRight="@dimen/progress_bar_bottom_padding"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/progress_bar_bottom_padding"
                style="?android:progressBarStyleHorizontal" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>