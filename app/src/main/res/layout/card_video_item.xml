<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:tag="layout/card_video_item_0"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/card_margin_end"
    app:cardBackgroundColor="?cardViewBackgroundColor"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <FrameLayout
            android:layout_width="0.0dip"
            android:layout_height="0.0dip"
            app:layout_constraintDimensionRatio="@string/meta_poster_dimension_ratio_landscape"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_min="@dimen/meta_poster_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_min="@dimen/meta_poster_size">
            <ImageView
                android:layout_gravity="center"
                android:tag="binding_1"
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:src="@drawable/ic_video_background_logo"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:contentDescription="@null" />
            <ImageView
                android:layout_gravity="center"
                android:tag="binding_2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@null" />
            <ImageView
                android:layout_gravity="center"
                android:tag="binding_3"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/meta_details_video_card_icon_size"
                android:src="@drawable/hourglass"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:alpha="@dimen/meta_details_video_card_logo_alpha" />
            <ProgressBar
                android:layout_gravity="bottom"
                android:tag="binding_4"
                android:paddingLeft="@dimen/progress_bar_bottom_padding"
                android:paddingRight="@dimen/progress_bar_bottom_padding"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/progress_bar_bottom_padding"
                style="?android:progressBarStyleHorizontal" />
            <LinearLayout
                android:layout_gravity="end|center|top"
                android:orientation="horizontal"
                android:tag="binding_5"
                android:background="@drawable/card_in_cinema_background"
                android:paddingLeft="7.0dip"
                android:paddingTop="3.0dip"
                android:paddingRight="7.0dip"
                android:paddingBottom="3.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:paddingHorizontal="7.0dip"
                android:paddingVertical="3.0dip">
                <ImageView
                    android:layout_gravity="center"
                    android:tag="binding_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/checkmark"
                    android:adjustViewBounds="true"
                    android:maxHeight="10.0dip"
                    android:contentDescription="@null"
                    android:paddingEnd="5.0dip" />
                <TextView
                    android:textSize="@dimen/meta_details_video_episode_size"
                    android:tag="binding_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0.0dip" />
            </LinearLayout>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>