<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:tag="layout/fragment_meta_preview_0"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.7">
        <ImageView
            android:id="@id/meta_preview_background"
            android:tag="binding_1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@null" />
        <View
            android:background="@drawable/background_gradient"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:backgroundTint="?android:windowBackground" />
    </FrameLayout>
    <LinearLayout
        android:gravity="start"
        android:orientation="vertical"
        android:paddingTop="@dimen/content_padding_start"
        android:paddingBottom="@dimen/meta_preview_frame_margin"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:paddingStart="@dimen/content_padding_start"
        android:paddingEnd="@dimen/meta_preview_frame_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5">
        <TextView
            android:textAppearance="@style/TextAppearance.Title.Large"
            android:ellipsize="end"
            android:id="@id/meta_preview_name"
            android:tag="binding_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:includeFontPadding="false" />
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/meta_preview_row_spacing">
            <TextView
                android:textSize="@dimen/meta_preview_small_text"
                android:id="@id/meta_preview_runtime"
                android:tag="binding_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/meta_preview_element_spacing" />
            <TextView
                android:textSize="@dimen/meta_preview_small_text"
                android:id="@id/meta_preview_year"
                android:tag="binding_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/meta_preview_element_spacing" />
            <LinearLayout
                android:gravity="center"
                android:tag="binding_5"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginEnd="@dimen/meta_preview_element_spacing">
                <TextView
                    android:textSize="@dimen/meta_preview_small_text"
                    android:id="@id/meta_preview_rating"
                    android:tag="binding_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5.0dip" />
                <ImageView
                    android:id="@id/meta_preview_rating_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.70000005dip"
                    android:src="@drawable/imdb"
                    android:scaleType="centerCrop"
                    app:tint="@color/imdbIconColor" />
            </LinearLayout>
            <TextView
                android:textSize="@dimen/meta_preview_small_text"
                android:ellipsize="end"
                android:layout_gravity="bottom"
                android:id="@id/meta_preview_genres"
                android:tag="binding_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1" />
        </LinearLayout>
        <TextView
            android:textSize="@dimen/meta_preview_large_text"
            android:ellipsize="end"
            android:id="@id/meta_preview_description"
            android:tag="binding_8"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/meta_preview_row_spacing"
            android:maxLines="4" />
        <TextView
            android:textSize="@dimen/meta_preview_small_text"
            android:textColor="?android:textColorSecondary"
            android:ellipsize="end"
            android:id="@id/meta_preview_cast"
            android:tag="binding_9"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/meta_preview_row_spacing"
            android:maxLines="1" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>